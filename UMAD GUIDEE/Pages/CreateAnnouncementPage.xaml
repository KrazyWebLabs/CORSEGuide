<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UMAD_GUIDEE.Pages.CreateAnnouncementPage"
             Title="Crear Publicación">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Título" FontSize="16" />
        <Entry x:Name="TitleEntry" Placeholder="Ingrese el título" />

        <Label Text="Descripción" FontSize="16" />
        <Editor x:Name="DescriptionEditor" Placeholder="Ingrese la descripción" HeightRequest="100" />

        <Button Text="Crear Publicación" 
                BackgroundColor="#0CB7EB" 
                TextColor="White" 
                FontSize="16" 
                CornerRadius="10" 
                Clicked="OnCreateAnnouncementClicked" />
    </StackLayout>
</ContentPage>